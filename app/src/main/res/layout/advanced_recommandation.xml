<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/ARImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.88" />

    <TextView
        android:id="@+id/ARtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:gravity="center"
        android:text="Voulez vous une biÃ¨re en Pression ?"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/imageButtonCross"
            android:layout_width="69dp"
            android:layout_height="76dp"
            android:layout_weight="0.01"
            android:onClick="onClick"
            app:srcCompat="@drawable/ic_wrong" />

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:onClick="onClick"
            app:srcCompat="@drawable/ic_go_back" />

        <ImageButton
            android:id="@+id/imageButtonValid"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:onClick="onClick"
            app:srcCompat="@drawable/ic_check_mark" />

    </LinearLayout>
</LinearLayout>