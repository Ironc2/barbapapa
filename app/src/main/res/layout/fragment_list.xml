<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardview_light_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:id="@+id/beer_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/punk_ipa"
                android:scaleType="fitCenter"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beer_name"
                android:layout_toRightOf="@+id/beer_photo"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="Punk IPA"
                android:textColor="@color/colorPrimaryText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beer_price"
                android:layout_toRightOf="@+id/beer_photo"
                android:layout_below="@+id/beer_name"
                android:text="2,70â‚¬"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beer_ABV"
                android:layout_toRightOf="@+id/beer_price"
                android:layout_below="@+id/beer_name"
                android:text="5,9%"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beer_type"
                android:layout_toRightOf="@+id/beer_ABV"
                android:layout_below="@+id/beer_name"
                android:text="Style : IPA"
                android:textColor="@color/colorSecondaryText"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
